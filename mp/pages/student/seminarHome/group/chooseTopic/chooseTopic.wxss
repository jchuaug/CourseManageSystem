/*!* 背景色 *!*/

page {
  background: rgba(102, 204, 255, 0.5);
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}



/*mine*/
.blueUsersView {
  width: 80%;
  height: 10%;
  margin: auto;
  font-size: 28rpx;
  margin-top: 30px;
  border-bottom: gray solid 5rpx;
}

.topic-view{
    display: flex;
  flex-direction: row;
    justify-content: space-around;
    height: 150rpx;
  width: 90%;
  margin: 40rpx auto 0 auto;
  padding: 10rpx 0;
    background-color: #ddd;

  border-radius: 5rpx;
}

.active{
  background-color: #66CDFF;
}

.flex-center{
  display: flex;
  justify-content: center;
  flex-direction: column;
    flex-grow: 1;
}

.right{
    flex-grow: 2;
}

.left-number{
    font-size: 28rpx;
}

.i-expand{
  flex-grow: 0.5;
  padding: 20px 10px 20px 20px;
  color:white;
}

.topic {
  color: #fff;
  font-size: 48rpx;
  text-align: center;
}

.topicName {
  color: #fff;
  font-size: 28rpx;
}

.detail{
  width: 90%;
  margin: 0 auto 40rpx auto;
   word-wrap: break-word;
  background-color: #B6E7FE;
  color: gray;
  padding: 0 40rpx;
  box-sizing: border-box;
  /*white-space: ;*/
}


