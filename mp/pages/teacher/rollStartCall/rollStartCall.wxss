page {
  height: 100%;
}
button{
  width: 250rpx;
  border-radius: 30rpx;
}
.container {
  display: flex;
  flex-direction: column;
  background: rgba(102, 204, 255, 0.5);
  padding: 60rpx;
}

.info_banner {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  padding-bottom: 70rpx;
  border-bottom: 5rpx solid black;
}
.blueBoardIcon{
  width: 250rpx;
  height: 250rpx;
}
.usersIcon{
  width: 40rpx;
  height: 40rpx;
}
.class_info {
  display: flex;
  flex-direction: column;
}

.class_name {
  font-size: 70rpx;
}

.class_num {
  font-size: 32rpx;
}

.largefiy {
  font-size: 220rpx;
}

.roll {
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.roll_info {
  margin-bottom: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.roll_info_text{
  font-size: 30rpx;
  margin-right: 40rpx
}
